{
  "compilerOptions": {
    "target": "ES2021",
    "lib": ["ES2021"],
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": ".",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "ignoreDeprecations": "6.0",
    "typeRoots": ["./src/types", "./node_modules/@types"]
  },
  "include": ["src", "scripts", "src/app.ts"],
  "exclude": ["node_modules", "dist"]
}
